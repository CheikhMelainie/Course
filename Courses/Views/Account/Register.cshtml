@model Courses.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<link href="~/css/user-style.css" rel="stylesheet" />
<head>

</head>
<body>
    <div id="user-auth">
        <div class="container">
            <div id="user-auth-row" class="row justify-content-center align-items-center">
                <div id="user-auth-column" class="col-md-6">
                    <div id="user-auth-box" class="col-md-12 user-auth-box-Register ">


                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <h3 class="text-center text-info">Register</h3>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Name, new { @class = "text-info" })
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "text-info" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "text-info" })
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "text-info" })
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="Register">
                            </div>
                            <div id="register-link" class="text-right">
                                @Html.ActionLink("Login", "Login", "Account", new { @class = "text-info" })
                            </div>
                        }

                        @if (Model != null && !string.IsNullOrEmpty(Model.Message))
                        {
                            <div class="alert alert-danger" style="margin-top: 5rem">
                                @Model.Message
                            </div>
                        }
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
</body>